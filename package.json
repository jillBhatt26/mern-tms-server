{
    "name": "server",
    "version": "1.0.0",
    "main": "src/index.js",
    "license": "MIT",
    "scripts": {
        "start": "forever start src/index",
        "dev": "nodemon -L src/index",
        "compose:up:dev": "docker-compose -f ./docker/docker-compose.dev.yaml up --build",
        "compose:up:prod": "GITHUB_SHA=$(git rev-parse --short HEAD) docker-compose -f ./docker/docker-compose.prod.yaml up --build -d --scale server=3",
        "compose:down": "cd ./docker && docker-compose down --rmi all -v --remove-orphans"
    },
    "devDependencies": {
        "nodemon": "^2.0.19"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-session": "^1.17.3",
        "forever": "^4.0.3",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.5.0",
        "validator": "^13.7.0"
    }
}
